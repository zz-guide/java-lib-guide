<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.zz.lib.guide</groupId>
    <artifactId>java-lib-guide</artifactId>
    <packaging>pom</packaging>
    <modules>
        <module>learn-excel/learn-easyexcel</module>
        <module>learn-excel/learn-easypoi</module>
        <module>learn-json/learn-fastjson2</module>
        <module>learn-json/learn-jackson</module>
        <module>learn-json/learn-gson</module>
        <module>learn-tool/learn-hutool</module>
        <module>learn-tool/learn-commons</module>
        <module>learn-tool/learn-guava</module>
        <module>learn-jwt</module>
        <module>learn-utils</module>
        <module>learn-encryption-algorithm/learn-rsa</module>
        <module>learn-encryption-algorithm/learn-md5</module>
        <module>learn-encryption-algorithm/learn-base64</module>
        <module>learn-encryption-algorithm/learn-sha</module>
        <module>learn-encryption-algorithm/learn-aes</module>
        <module>learn-encryption-algorithm/learn-des</module>
        <module>learn-encryption-algorithm/learn-dsa</module>
    </modules>

    <version>1.0-SNAPSHOT</version>

    <properties>
        <java.version>17</java.version>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <junit.jupiter.version>5.10.2</junit.jupiter.version>
        <lombok.version>1.18.32</lombok.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- https://mvnrepository.com/artifact/org.junit.jupiter/junit-jupiter-api -->
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter-api</artifactId>
                <version>${junit.jupiter.version}</version>
            </dependency>

            <!-- https://mvnrepository.com/artifact/org.projectlombok/lombok -->
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
                <scope>provided</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <id>nexus-aliyun</id>
            <name>nexus-aliyun</name>
            <url>https://maven.aliyun.com/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <build>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/**/*.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/**/*.xml</include>
                    <include>**/**/*.properties</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>